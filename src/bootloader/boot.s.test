.set MAGIC,     0x1badb002
.set FLAGS,     (1<<0 | 1<<1)
.set CHECKSUM,  -(MAGIC + FLAGS)

.section .multiboot
.long MAGIC
.long FLAGS
.long CHECKSUM

.section .text
.extern kernel_entry
.extern call_constructors
.global _start

_start:
    mov $kernel_stack, %esp
    call call_constructors
    push %eax
    push %ebx
    call kernel_entry

_stop:
    cli
    hlt
    jmp _stop

.section .bss
.space 2*1024*1024
kernel_stack: